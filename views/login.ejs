<div style="margin: auto; width: 100%;">
    <form class="form-signin borderStyle" action="/users/login" method="post">
        <h1 class="h3 mb-3 font-weight-normal">ورود به بخش مدیریت</h1>
        <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
        <input
            type="email"
            id="inputEmail"
            class="form-control mb-2"
            placeholder="آدرس ایمیل"
            required
            autofocus
        />
        <label for="inputPassword" class="sr-only">کلمه عبور</label>
        <input
            type="password"
            id="inputPassword"
            class="form-control"
            placeholder="کلمه عبور"
            required
        />
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me" /> من را به خاطر بسپار
            </label>
            <hr>
            <a class="mt-2" href="/users/register">ثبت نام</a>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">ورود</button>
    </form>
</div>
